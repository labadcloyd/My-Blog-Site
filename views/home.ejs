                    <!-- <div class="article-thumbnail-image" id="article1" >
                    </div> -->
                    <div class="article-thumbnail-content">
                        <p class="article-thumbnail-content-title">
                            <%= article.title.substr(0,60)+'...' %>
                        </p>
                        <p class="article-thumbnail-content-date">
                            <%= article.date %>
                        </p>
                        <p>
                            <%= article.content.substr(0,180)+'...' %>
                        </p> 
                    </div>
                </a>
            <% }) %>
        </div>
    </div>

